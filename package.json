{
  "name": "iffy-engine",
  "version": "0.1.0",
  "description": "LLM-powered Interactive Fiction Engine",
  "main": "src/main.ts",
  "scripts": {
    "dev": "vite",
    "build": "npm run bundle-examples && tsc && vite build",
    "build:gh-pages": "NODE_ENV=production npm run build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "validate-story": "tsx scripts/validate-story.ts",
    "debug-classifier": "tsx scripts/debug-classifier.ts",
    "test-prompt": "tsx scripts/test-prompt.ts",
    "bundle-examples": "tsx scripts/bundle-examples.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:llm-player": "tsx tests/integration/llm-player/run-test.ts",
    "test:llm-player:auto": "tsx tests/integration/llm-player/run-test.ts --auto",
    "debug:assessor": "tsx tests/integration/llm-player/debug-assessor.ts",
    "test:matrix": "tsx tests/integration/llm-player/run-matrix.ts",
    "test:latency": "tsx scripts/latency-test.ts",
    "docs:serve": "npx http-server docs -p 8080 -o",
    "docs:dev": "echo 'Documentation available at: http://localhost:8080' && npm run docs:serve"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.15.30",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/ui": "^1.0.0",
    "@vue/tsconfig": "^0.5.0",
    "dotenv": "^16.5.0",
    "jsdom": "^23.0.0",
    "tsx": "^4.19.4",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "vue-tsc": "^2.0.0"
  },
  "dependencies": {
    "@langchain/anthropic": "^0.3.22",
    "@langchain/core": "^0.3.59",
    "@langchain/google-genai": "^0.2.11",
    "@langchain/openai": "^0.5.13",
    "glob": "^11.0.3",
    "js-yaml": "^4.1.0",
    "langchain": "^0.3.28",
    "markdown-it": "^14.1.0",
    "vue": "^3.4.0",
    "vue-router": "^4.5.1",
    "zod": "^3.25.56"
  }
}
